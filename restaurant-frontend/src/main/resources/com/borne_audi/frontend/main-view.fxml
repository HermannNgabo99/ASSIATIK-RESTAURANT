    </left>

    <!-- CENTER : Dish cards -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <Label fx:id="dishesTitle" text="Plats"
                   style="-fx-font-size:18px; -fx-font-weight:900; -fx-text-fill:#111827;"/>

            <ScrollPane fitToWidth="true" style="-fx-background:#f6f7fb; -fx-background-color:transparent;">
                <content>
                    <TilePane fx:id="dishesTile"
                              prefColumns="2"
                              hgap="14"
                              vgap="14"
                              style="-fx-background-color:transparent;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </TilePane>
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>