            </HBox>

            <Label fx:id="statusLabel" text="" style="-fx-text-fill:#6b7280;"/>
        </VBox>
    </top>

    <!-- LEFT : Categories -->
    <left>
        <VBox spacing="10" prefWidth="260"
              style="-fx-background-color:white; -fx-border-color:#e5e7eb; -fx-border-width:0 1 0 0;">
            <padding>
                <Insets top="16" right="12" bottom="16" left="12"/>
            </padding>

