<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.borne_audi.frontend.MenuController"
            style="-fx-background-color: #f6f7fb;">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="10" style="-fx-background-color: white; -fx-border-color:#e5e7eb; -fx-border-width:0 0 1 0;">
            <padding>
                <Insets top="16" right="18" bottom="14" left="18"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <Button text="â† Accueil" onAction="#onBackHome"
                        style="-fx-font-size:14px; -fx-font-weight:800; -fx-background-radius:10; -fx-padding:10 14;"/>

                <Label text="Menu" style="-fx-font-size:28px; -fx-font-weight:900; -fx-text-fill:#111827;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Charger les catÃ©gories" onAction="#onLoadCategories"
                        style="-fx-font-size:14px; -fx-font-weight:800; -fx-background-radius:10; -fx-padding:10 14;"/>

                <Button fx:id="cartButton" text="ðŸ›’ Panier (0,00 â‚¬)" onAction="#onOpenCart"
