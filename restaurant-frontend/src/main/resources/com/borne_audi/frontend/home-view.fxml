<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.borne_audi.frontend.HomeController"
            stylesheets="@app.css"
            styleClass="bg-amber">

    <center>
        <VBox alignment="CENTER" spacing="28">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Logo box -->
            <VBox alignment="CENTER" spacing="10" styleClass="sketch-card">
                <padding>
                    <Insets top="18" right="22" bottom="18" left="22"/>
                </padding>
                <Label text="Asiatik Express" styleClass="home-title"/>
            </VBox>

            <!-- CTA -->
            <Button text="TOUCHEZ POUR COMMENCER"
                    onAction="#onStart"
                    styleClass="cta-button"
                    prefWidth="900"
                    prefHeight="120"/>

            <Label text="Commandez vos plats en quelques Ã©tapes"
                   styleClass="home-subtitle"/>

            <!-- Footer controls -->
            <HBox alignment="CENTER" spacing="18">
                <Button text="FR" styleClass="ghost-button" prefWidth="110" prefHeight="46"/>
                <Button text="EN" styleClass="ghost-button disabled" prefWidth="110" prefHeight="46"/>
                <Button text="Aide" styleClass="ghost-button" prefWidth="140" prefHeight="46"/>
            </HBox>
        </VBox>
    </center>

    <!-- just to keep it visually balanced like the mock -->
    <bottom>
        <Region prefHeight="28"/>
    </bottom>

</BorderPane>

